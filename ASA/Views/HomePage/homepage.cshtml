		<script>
			$('#open').click(function () {
				$('.sidebar').toggleClass('active')
			})

			$(document).click(function (e) {
				var sidebar = $(".sidebar, #open");
				if (!sidebar.is(e.target) && sidebar.has(e.target).length === 0) {
					sidebar.removeClass('active')
				}
			});

		</script>

